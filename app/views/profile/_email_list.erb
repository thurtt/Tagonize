<%if @user.emails.length < 1%>
You have to link an email address to begin.
<%end%>
<%for email in @user.emails%>

<table class="<%= cycle('even','odd') %>">
	<tr>
		<td class="image"><div><%=link_to_remote(image_tag(gravatar_url(email.address, {:size=>"50", :rating=>"pg"})),:update=>"mini_profile", :url=>{:controller=>"profile", :action=>"set_default_email", :id=>email.id})%></div></td>
		<td class="address"><div ><%=email.address%> <%=email.verified%></div></td>
		<td class="controls"><div><%=link_to_remote("[delete]",:update=>"email_list",:url=>{ :controller=>"profile", :action=>"unlink_email", :id=>email.id})%></div></td>
	</tr>
</table>
<!-- <tr><td colspan=3><%=email.verification%></td></tr> -->
<%end%>

<div class="link_email">

	<%remote_form_for :email,:update=>"email_list", :url=>{:controller=>"profile", :action=>"link_email"} do |f|%>
	<%=f.hidden_field :id%>
	<%=f.hidden_field :user_id%>
	<%=f.text_field :address%>
	<%=submit_tag "Link Email"%>
	<%end%>
</div>
<script>
email_count = <%=@user.emails.length%>;

<%if @new_email%>
history.go(0);
<%end%>

<%if (@user.emails.length > 0) && (@user.email != nil)%>
$('done_button').style.display = '';
if (current_scene == 3)
	resetScene();
<%else%>
	setupScene(1);
<%end%>

</script>
